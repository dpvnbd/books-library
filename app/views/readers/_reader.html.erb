<div class="card mb-2">
  <div class="card-body">
    <div class="record-info">
      <div class="record-info-row">
        <div class="record-title"><%= "#{reader.second_name} #{reader.first_name}" %></div>
        <div class="record-subtext"><%= reader.patronymic %></div>
      </div>
      <div class="record-info-row">
        <div class="record-subtext"><%= reader.home_address %></div>
        <div class="record-subtext"><%= reader.phone %></div>
        <div class="record-links">
          <%= link_to reader do %>
            <%= fa_icon "eye" %>
          <% end %>
          <%= link_to edit_reader_path(reader) do %>
            <%= fa_icon "edit" %>
          <% end %>
          <%= link_to reader, method: :delete, data: {confirm: 'Are you sure?'} do %>
            <%= fa_icon "trash" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
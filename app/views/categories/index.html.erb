<%= link_to 'New Category', new_category_path %>

<% @categories.each do |category| %>
  <div class="d-flex">
    <h3>
      <%= category.name %>
      <%= link_to edit_category_path(category) do %>
        <%= fa_icon "edit" %>
      <% end %>
      <%= link_to category, method: :delete, data: {confirm: 'Are you sure?'} do %>
        <%= fa_icon "trash" %>
      <% end %>
    </h3>
  </div>
<% end %>

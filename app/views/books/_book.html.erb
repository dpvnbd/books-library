<div class="card mb-2">
  <div class="card-body">
    <div class="record-info">
      <div class="record-info-row">
        <div class="record-title"><%= book.title %></div>
        <div class="record-subtext">by <%= book.author %></div>
      </div>
      <div class="record-info-row">
        <div class="record-subtext">published by <%= book.publisher %></div>
        <div class="record-subtext"><%= book.published_on %></div>
        <div class="record-links">
          <%= link_to book do %>
            <%= fa_icon "eye" %>
          <% end %>
          <%= link_to edit_book_path(book) do %>
            <%= fa_icon "edit" %>
          <% end %>
          <%= link_to book, method: :delete, data: {confirm: 'Are you sure?'} do %>
            <%= fa_icon "trash" %>
          <% end %>
        </div>
      </div> 
      <div>
        <% book.categories.each do |category| %>
          <span class="badge badge-info"><%= category.name %></span>
      <% end %>
      </div>
    </div>
  </div>
</div>
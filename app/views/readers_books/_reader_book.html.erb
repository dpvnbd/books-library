<div class="card mb-2">
  <div class="card-body">
    <div class="record-info">
      <div class="record-info-row">
        <div class="record-title"><%= reader_book.book.title %></div>
      </div>
      <div class="record-info-row">
        <div class="record-subtext">published by <%= reader_book.reader.second_name %></div>
        <div class="record-links">
          <%= link_to book do %>
            <%= fa_icon "eye" %>
          <% end %>
          <%= link_to edit_book_path(book) do %>
            <%= fa_icon "edit" %>
          <% end %>
          <%= link_to book, method: :delete, data: {confirm: 'Are you sure?'} do %>
            <%= fa_icon "trash" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>